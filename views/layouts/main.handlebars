 {{{body}}}
  {{!-- This section is for the motivational quotes --}}
  <section>

  </section>

  {{!-- job cards will go in the section below --}}
  <section>

  </section>

  {{!-- job form section --}}
  <section>
    <form>
      <!-- job summary -->
      <h4>Job Prospect</h4>
      <label for="name">Company Name:</label><br>
      <input type="text" name="name"><br>
      <label for="position">Position Title:</label><br>
      <input type="text" name="position"><br>
      <label for="initialSalary">Salary range:</label><br>
      <input type="number" name="initialSalary"><br>
      <label for="jobDesLink">Job posting URL: </label><br>
      <input type="url" name="jobDesLink">

      <!-- application process -->
      <h4>Application Status</h4>
      <label for="applied">Applied to job?</label>
      <input type="checkbox" name="jobApplication"><br>
      <label for="feedback">Did you hear back from this company since you applied?</label>
      <input type="checkbox" name="feedback"><br>

      <!-- recruiter contact info -->
      <h4>Recruiter</h4>
      <label for="recName">Recruiter Name:</label><br>
      <input type="text" name="recName"><br>
      <label for="recPhoneNum">Recruiter phone number:</label><br>
      <input type="tel" name="recPhoneNum"><br>
      <label for="recEmail">Recruiter email:</label><br>
      <input type="email" name="recEmail"><br>

      <!-- interview process -->
      <h4>Interview Status</h4>
      <label for="screeningInt">Screening Interview:</label><br>
      <input type="datetime-local" name="screeningInt"><br>
      <label for="technicalInt">Technical Interview:</label><br>
      <input type="datetime-local" name="technicalInt"><br>
      <label for="finalInt">Final Interview:</label><br>
      <input type="datetime-local" name="finalInt"><br>

      <!-- hiring process -->
      <h4>Job Offer</h4>
      <textarea name="jobOffer" id="" cols="40" rows="5">List benefits here:</textarea>

      <input type="submit">
    </form>
  </section>
  
</body>

</html>