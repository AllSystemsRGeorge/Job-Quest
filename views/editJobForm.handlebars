{{!-- job form section --}}
<section>
    <div class="d-flex align-items-center flex-column ">
        <div class="card w-75">
            <div id="jobProspect" class="card-header mb-3">
                Job Prospect
            </div>
            <div class="form-floating mb-3">
                <input type="input" class="form-control" id="companyName" value={{selectedJob.company}}>
                <label>Company Name (Required) </label>
            </div>
            <div class="form-floating mb-3">
                <input type="input" class="form-control" id="positionTitle" value={{selectedJob.position}}>
                <label>Position Title (Required) </label>
            </div>
            <div class="form-floating mb-3">
                <input type="input" class="form-control" id="jobLink" value={{selectedJob.link}}>
                <label>Job Posting URL (Required) </label>
            </div>
            <div class="form-floating mb-3">
                <label for="customRange3" class="form-label text-muted">Salary Range: <output id="rangeVal"
                        class="fontSizing text-muted">${{selectedJob.salary}}</output></label>
                <br>
                <br>
                <input type="range" class="form-range" min="10000" max="500000" step="10000" id="salary"
                    oninput="rangValfunc(this.value)" value="rangeValfunc({{selectedJob.salary}})">
            </div>
            <div class="form-floating mb-3">
                <h5>Application Status</h5>
            </div>
            <div id="checkBox" class="form-floating mb-3">
                <ul>
                    <li>
                        <label for="applied" class="text-muted">Applied to job?</label>
                        <input type="checkbox" name="jobApplication" id="applicationStatus"
                            value={{selectedJob.haveApplied}}>
                    </li>
                    <li>
                        <label for="feedback" class="text-muted">Did you hear back from this company since you
                            applied?</label>
                        <input type="checkbox" name="feedback" id="feedbackStatus" value={{selectedJob.feedback}}>
                    </li>
                </ul>
            </div>
            <div class="form-floating mb-3">
                <h5>Recruiter Info</h5>
            </div>
            <div class="form-floating mb-3">
                <input type="input" class="form-control" id="recruiterName" value={{selectedJob.recruiterName}}>
                <label>Recruiter Name </label>
            </div>
            <div class="form-floating mb-3">
                <input type="input" class="form-control" id="recruiterPhone" value={{selectedJob.recruiterPhone}}>
                <label>Recruiter Phone Number </label>
            </div>
            <div class="form-floating mb-3">
                <input type="input" class="form-control" id="recruiterEmail" value={{selectedJob.recruiterEmail}}>
                <label>Recruiter Email </label>
            </div>
            <div class="form-floating mb-3">
                <h5>Interview Status</h5>
            </div>
            <div class="form-floating mb-3 ">
                <input type="datetime-local" class="form-control" name="screeningInt" id="screeningInterview"
                    value={{selectedJob.screeningInterview}}>
                <label for="screeningInt">Screening Interview</label>
            </div>
            <div class="form-floating mb-3 ">
                <input type="datetime-local" class="form-control" name="screeningInt" id="technicalInterview"
                    value={{selectedJob.technicalInterview}}>
                <label for="screeningInt">Technical Interview</label>
            </div>
            <div class="form-floating mb-3 ">
                <input type="datetime-local" class="form-control" name="screeningInt" id="finalInterview"
                    value={{selectedJob.finalInterview}}>
                <label for="screeningInt">Final Interview</label>
            </div>
            <div class="form-floating mb-3">
                <h5>Offer Package</h5>
            </div>
            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label text-muted">Job Benefits</label>
                <textarea class="form-control" id="jobOffer" rows="3"
                    placeholder="Input Benefits Here">{{selectedJob.jobOffer}}</textarea>
            </div>

            <button type="submit" class="btn btn-primary" id="updateBtn"
                onclick="updateJob('{{selectedJob.id}}')">Update Job Card</button>
        </div>
    </div>
</section>

